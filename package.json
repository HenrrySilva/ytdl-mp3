{
  "name": "ytdl-mp3",
  "version": "2.0.2",
  "description": "A JavaScript package for downloading music from YouTube, including automatic retrieval of ID3 tags and album art via iTunes.",
  "type": "commonjs",
  "bin": {
    "ytdl-mp3": "./bin/ytdl-mp3"
  },
  "main": "./build/index.js",
  "types": "./build/index.d.js",
  "scripts": {
    "build": "rm -rf build && tsc",
    "format": "prettier --write src/**",
    "lint": "eslint --fix --ext .ts src/",
    "preversion": "npm run lint && npm run format && npm test",
    "test": "jest",
    "version": "npm run build",
    "ytdl-mp3": "ts-node ./bin/ytdl-mp3"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/joshunrau/ytdl-mp3.git"
  },
  "author": "Joshua Unrau",
  "license": "MIT",
  "keywords": [
    "youtube",
    "download",
    "mp3",
    "music"
  ],
  "bugs": {
    "url": "https://github.com/joshunrau/ytdl-mp3/issues"
  },
  "homepage": "https://github.com/joshunrau/ytdl-mp3#readme",
  "devDependencies": {
    "@types/ffmpeg-static": "^3.0.1",
    "@types/jest": "^28.1.7",
    "@types/node": "^18.7.8",
    "@typescript-eslint/eslint-plugin": "^5.33.1",
    "@typescript-eslint/parser": "^5.33.1",
    "eslint": "^8.22.0",
    "eslint-config-prettier": "^8.5.0",
    "jest": "^28.1.3",
    "prettier": "2.7.1",
    "ts-jest": "^28.0.8",
    "ts-node": "^10.9.1",
    "typescript": "^4.7.4"
  },
  "dependencies": {
    "axios": "^0.27.2",
    "commander": "^9.4.0",
    "ffmpeg-static": "^5.0.2",
    "node-id3": "^0.2.3",
    "ytdl-core": "4.10.0"
  },
  "files": [
    "bin",
    "build",
    "LICENSE",
    "README.md",
    "package.json"
  ]
}
